{
    "name": "tails",
    "displayName": "Tails",
    "description": "Stuff and Things. Clipboard history today, sentient salty AI tomorrow.",
    "author": "Dirk Mahoney",
    "publisher": "tcri",
    "version": "1.0.1",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.77.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "clipboard",
        "history"
    ],
    "galleryBanner": {
        "color": "#040404",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/technocosmic/tails.git"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Tails",
            "properties": {
                "tails.maxHistoryEntries": {
                    "type": "number",
                    "default": 20,
                    "description": "The maximum number of clipboard history entries to keep"
                }
            }
        },
        "commands": [
            {
                "command": "tails.clearHistory",
                "title": "Tails: Clear Clipboard History"
            },
            {
                "command": "tails.copyToClipboard",
                "title": "Tails: Copy"
            },
            {
                "command": "tails.cutToClipboard",
                "title": "Tails: Cut"
            }
        ],
        "keybindings": [
            {
              "command": "tails.cutToClipboard",
              "key": "ctrl+x",
              "mac": "cmd+x",
              "when": "editorTextFocus"
            },
            {
              "command": "tails.copyToClipboard",
              "key": "ctrl+c",
              "mac": "cmd+c",
              "when": "editorTextFocus"
            }
          ]
            },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.77.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "eslint": "^8.36.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5",
        "@vscode/test-electron": "^2.3.0"
    }
}
